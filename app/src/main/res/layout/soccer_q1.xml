<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondosoccer"
    android:padding="16dp">

    <TextView
        android:id="@+id/pregunta_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pregunta 1: ¿En qué año se celebró la primera Copa Mundial de la FIFA?"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="21sp"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/image_pregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:visibility="visible"/>

    <RadioGroup
        android:id="@+id/respuestas_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="vertical"
        android:layout_marginBottom="8dp">

        <!-- Aquí se definen las opciones de respuesta -->
        <RadioButton
            android:id="@+id/respuesta1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1930"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <RadioButton
            android:id="@+id/respuesta2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1942"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <RadioButton
            android:id="@+id/respuesta3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1950"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <RadioButton
            android:id="@+id/respuesta4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1966"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </RadioGroup>

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FF0000"
        android:textSize="17sp"
        android:visibility="gone" />
</LinearLayout>